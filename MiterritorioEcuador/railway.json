{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pip install --no-cache-dir -r requirements.txt && python manage.py collectstatic --no-input",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python312", "postgresql_16"],
          "aptPkgs": ["libpq5"]
        }
      }
    }
  },
  "start": "gunicorn MiterritorioEcuador.wsgi:application --bind 0.0.0.0:$PORT --workers 2 --threads 4 --timeout 30"
}